<Window x:Class="EquationSolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:EquationSolver.View"
        mc:Ignorable="d"
        Title="Equation solver" Height="480" Width="620" ResizeMode="NoResize">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="250" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <view:DrawingView Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Margin="5,5,0,5" />
        <view:InputView Grid.Column="0" Grid.Row="1" Margin="5" />
        <view:SolverView Grid.Column="1" Grid.Row="1" Margin="5,5,0,5"/>
        
    </Grid>
</Window>